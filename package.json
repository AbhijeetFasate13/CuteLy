{
  "name": "url-shortner",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "tsx node_modules/mocha/bin/mocha --timeout 10000 --extension ts \"src/tests/**/*.test.ts\" src/tests/*.test.ts",
    "test:integration": "tsx node_modules/mocha/bin/mocha --timeout 10000 --extension ts src/tests/integration/**/*.test.ts",
    "test:unit": "tsx node_modules/mocha/bin/mocha --timeout 10000 --extension ts src/tests/**/*.test.ts --grep integration --invert",
    "test:watch": "tsx node_modules/mocha/bin/mocha --timeout 10000 --extension ts src/tests/**/*.test.ts --watch",
    "lint": "eslint . --ext .ts --ignore-pattern dist/",
    "lint:fix": "eslint . --ext .ts --ignore-pattern dist/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "db:seed": "npx prisma db seed",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "validate": "npm run lint && npm run type-check && npm run test",
    "prisma:prepare": "npx prisma generate && npx prisma db push",
    "db:setup": "npx prisma db push",
    "prepare": "husky install",
    "postinstall": "husky install",
    "dev": "tsx src/index.ts",
    "build": "npx prisma generate && tsc",
    "start": "node dist/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/chai": "^5.2.2",
    "@types/convict": "^6.1.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/ioredis": "^5.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.4",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "chai": "^5.2.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "globals": "^16.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.2",
    "mocha": "^11.7.1",
    "prettier": "^3.6.1",
    "sinon": "^21.0.0",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  },
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "convict": "^6.2.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tsyringe": "^4.10.0",
    "winston": "^3.15.0",
    "zod": "^3.25.67"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
